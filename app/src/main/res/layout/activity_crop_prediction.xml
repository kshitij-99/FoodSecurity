<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CropPrediction">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="match_parent"
            android:id="@+id/S1"
            android:src="@mipmap/al"
            android:layout_alignParentTop="true"
            android:layout_height="250dp" />
        <TextView
            android:text="Alluvial Soil"
            android:layout_width="wrap_content"
            android:layout_below="@id/S1"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="match_parent"
            android:id="@+id/S2"
            android:src="@mipmap/red"
            android:layout_alignParentTop="true"
            android:layout_height="250dp" />
        <TextView
            android:text="Red Soil"
            android:layout_width="wrap_content"
            android:layout_below="@id/S2"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="match_parent"
                android:id="@+id/S3"
                android:src="@mipmap/mn"
                android:layout_alignParentTop="true"
                android:layout_height="250dp" />
            <TextView
                android:text="Mountain Soil"
                android:layout_width="wrap_content"
                android:layout_below="@id/S3"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="match_parent"
                android:id="@+id/S4"
                android:src="@mipmap/lt"
                android:layout_alignParentTop="true"
                android:layout_height="250dp" />
            <TextView
                android:text="Laterite Soil"
                android:layout_width="wrap_content"
                android:layout_below="@id/S4"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatImageButton
                    android:layout_width="match_parent"
                    android:id="@+id/S5"
                    android:src="@mipmap/bk"
                    android:layout_alignParentTop="true"
                    android:layout_height="250dp" />
                <TextView
                    android:text="Black Soil"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/S5"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageButton
                    android:layout_width="match_parent"
                    android:id="@+id/S6"
                    android:src="@mipmap/dt"
                    android:layout_alignParentTop="true"
                    android:layout_height="250dp" />
                <TextView
                    android:text="Desert Soil"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/S6"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>